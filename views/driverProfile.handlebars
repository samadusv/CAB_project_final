<link rel="stylesheet" href="/static/passengerProfile.css" type="text/css">
<h1 class="text-center" id="profile">Driver Profile</h1>
<div>
    <button class="btn btn-warning" Id="cabBtn"><a href="/availableBookings" id="cabDetails"> Available Bookings</a></button>    
</div>
<div class="container">
    <div class="leftContainer">
        <table class="table table-striped table-dark">
        <tr>
            <th>Id</th>
            <td>{{profileDetails.dataValues.driver_Id}}</tr>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{profileDetails.dataValues.driverName}}</td>
        </tr>
        <tr>
            <th>Licence No</th>
            <td>{{profileDetails.dataValues.driverLiceneceNo}}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{profileDetails.dataValues.driverEmail}}</td>
        </tr>
        <tr>
            <th>Dob</th>
            <td>{{profileDetails.dataValues.driverDob}}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>{{profileDetails.dataValues.driverAddress}}</td>
        </tr>
        <tr>
            <th>Gender</th>
            <td>{{profileDetails.dataValues.driverGender}}</td>
        </tr>
    </table>
    </div>
    <div class="rightContainer">
        <button type="button" class="btn btn-info shadow" id="edit"><a href="/editDriverAccount" class="editBtn">Edit</a> </button>
        <button class="btn btn-danger shadow" id="delete"><a href="/deleteDriver" class="deleteBtn" onclick="return confirm('Are you sure you want to delete this')" id="deleteBtn">Delete</a></button>
    </div>
    
</div>